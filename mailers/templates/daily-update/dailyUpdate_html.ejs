<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Billing e.g. invoices and receipts</title>
    <link href="styles.css" media="all" rel="stylesheet" type="text/css" />
  </head>

  <body itemscope itemtype="http://schema.org/EmailMessage">

    <table class="body-wrap">
      <tr>
        <td></td>
        <td class="container" width="600">
          <div class="content">
            <table class="main" width="100%" cellpadding="0" cellspacing="0">
              <tr>
                <td class="content-wrap aligncenter">
                  <table width="100%" cellpadding="0" cellspacing="0">
                    <tr>
                      <td class="content-block">
                        <h1 class="aligncenter">Campsite Finder</h1>
                      </td>
                    </tr>
                    <tr>
                      <td class="content-block">
                        <p class="aligncenter">Here is your daily update</p>
                      </td>
                    </tr>
                    <tr>
                      <td class="content-block aligncenter">
                        <% for(let i = 0; i < campgrounds.length; i++) { %>
                          <% const campground = campgrounds[i] %>
                          <table class="invoice">
                            <tr>
                              <td>
                                <h2><a href='<%= campground.url %>' target='blank'><%= campground.campground %></a></h2>
                                <p>for <%= campground.lengthOfStay %> nights</p>
                              </td>
                            </tr>
                            <tr>
                              <td>
                                <table class="invoice-items" cellpadding="0" cellspacing="0">
                                  <tr>
                                    <th>Date</th>
                                    <th class='alignright'># of spots</th>
                                  </tr>
                                  <% for(let j = 0; j < campground.results.length; j++) { %>
                                  <% const result = campground.results[j] %>
                                  <tr>
                                    <td><%= result.date %></td>
                                    <td class="alignright"><%= result.siteCount %></td>
                                  </tr>
                                  <% } %>
                                </table>
                              </td>
                            </tr>
                          </table>
                        <% } %>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
            <div class="footer">
              <table width="100%">
                <tr>
                  <td class="aligncenter content-block">&copy; Campsite Finder</td>
                </tr>
              </table>
            </div></div>
        </td>
        <td></td>
      </tr>
    </table>

  </body>
</html>
